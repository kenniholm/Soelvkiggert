@page
@model Soelvkikkert.Pages_Products.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.ID" />
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.SubscribtionStart" class="control-label"></label>
                <input asp-for="Product.SubscribtionStart" class="form-control" />
                <span asp-validation-for="Product.SubscribtionStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.SubscribtionEnd" class="control-label"></label>
                <input asp-for="Product.SubscribtionEnd" class="form-control" />
                <span asp-validation-for="Product.SubscribtionEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.SubscriberID" class="control-label"></label>
                <input asp-for="Product.SubscriberID" class="form-control" />
                <span asp-validation-for="Product.SubscriberID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
