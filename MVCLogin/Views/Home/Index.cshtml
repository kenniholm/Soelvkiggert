@model List<MVCLogin.Models.Product>
@{
    ViewData["Title"] = "Hjem";
}

<div class="text-center">
    <h1 class="display-4">Velkommen til Sølvkikkert.dk</h1>
    <img class="image" src="~/images/Soelvkikkert.png" width="1080" height="720" />
</div>

<!-- Slideshow container -->
<div class="slideshow-container">

    <!-- Full-width images with number and caption text -->

    @{
        for(int i=0; i < Model.Count; i++)
        {
            <div class="mySlides fade">
                <div class="numbertext">@(i+1) / @Model.Count</div>
                <img src="~/images/Soelvkikkert.png" style="width:100%">
                <div class="text">@Model[i].Name</div>
            </div>
        }
    }
    <!-- Next and previous buttons -->
    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
    <a class="next" onclick="plusSlides(1)">&#10095;</a>
</div>
<br>

<!-- The dots/circles -->
<div style="text-align:center">
     @{ 
         for(int i=0; i < Model.Count; i++)
         {
             <span class="dot" onclick="currentSlide(@(i+1))"></span>
         }
     }
    @*<span class="dot" onclick="currentSlide(1)"></span>
    <span class="dot" onclick="currentSlide(2)"></span>
    <span class="dot" onclick="currentSlide(3)"></span>*@
</div>
